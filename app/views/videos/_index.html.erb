<table class="table table-table-hover sound-table">
	<thead>
		<tr>
			<th>User</th>
			<th></th>
			<th>Title</th>
			<th>Video</th>
		</tr>
	</thead>
	<tbody>
		<% videos.each do |video|%>
			<tr class = "index-list">
				<td><%= link_to video.user.name, user_path(video.user), class: 'index-text' %></td>
				<td class= 'index-text'>
					<% unless user_signed_in? %>
						<%= video.title %></td>
				<td><%= video_tag video.file,  style: "width:60%;", :loop => true, :controls => true ,:muted => true %></td>
				<td>
					<% else %>
				<td><%= link_to video.title, video_path(video),data: {"turbolinks" => false}  , class: 'index-text' %></td>
				<td><%= link_to video_path(video) do %><%= attachment_image_tag video, :image, :fill, 200, 200, format: 'jpeg', fallback:"logo.jpeg" %></td>
						<% end %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
