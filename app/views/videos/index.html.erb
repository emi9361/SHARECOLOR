<main class="video-main">
<h1>Videos</h1>
<a><%= link_to '投稿', new_video_path, class: 'btn btn-info newpost_buttom', data: {"turbolinks" => false} %></a>
	<div class="video-list">
		<div class="sound-write">
			<table class="table table-borderless sound-table">
				<thead>
					<tr>
						<th scope="col">User</th>
						<th scope="col">Title</th>
						<th scope="col">Mood</th>
					</tr>
				</thead>
				<tbody>
					<% @videos.each do |video|%>
					<tr>
						<td><%= video.user.name %></td>
						<td><%= link_to video.title, video_path(video) %></td>
						<td><%= video.mood %></td>
						<td><%= video_tag video.file,  class:"video-sample", :controls => true %></td>
					</tr>
					<% end %>
					</tbody>
			</table>
		</div>
	</div>
</main>