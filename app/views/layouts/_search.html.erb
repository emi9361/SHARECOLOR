<% if user_signed_in? %>
	<div class="search-form" style="margin-top: 70px; text-align: center;">
		<%= form_tag(search_path, method: :get) do %>
		<%= text_field_tag 'search[content]','', id: 'suggest' %>
		<%= select_tag 'search[model]', options_for_select({ "Sound" => "sound", "Video" => "video", "Stage" => "stage" }) %>
		<%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect" , "部分一致" => "partial" }) %>
		<%= submit_tag 'Search' %>
		<% end %>
<% end %>
