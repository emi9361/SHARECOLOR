<!DOCTYPE html>
<html>
  <head>
    <title>SHARECOLOR</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      <script src="https://kit.fontawesome.com/3424c6cd81.js" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>audiojs.events.ready(function() {var as = audiojs.createAll();});
    </script>
  </head>
      <body>
        <div id="navArea">
      <nav>
        <% if user_signed_in? %>
            <div class="inner">
              <ul>
                <p>Hi!<%= current_user.name %></p>
                <li><%= link_to 'Top',root_path, data: {"turbolinks" => false} %></li>
                <li><%= link_to 'Sound',sounds_path, data: {"turbolinks" => false} %></li>
                <li><%= link_to 'Video', videos_path, data: {"turbolinks" => false} %></li>
                <li><%= link_to 'Stage', stages_path, data: {"turbolinks" => false} %></li>
                <li><%= link_to 'マイページ', users_path, data: {"turbolinks" => false}  %></li>
                <li><%= link_to 'サインアウト', destroy_user_session_path, method: :delete, data: {"turbolinks" => false}  %></li>
              </ul>
            </div>
         <% else %>
           <div class="inner">
               <ul>
                  <li><%= link_to '新規登録',new_user_registration_path, data: {"turbolinks" => false}  %></li>
                  <li><%= link_to 'ログイン', user_session_path, data: {"turbolinks" => false}  %></li>
                  <li><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, data: {"turbolinks" => false}  %></li>
               </ul>
            </div>
        <% end %>
      </nav>

          <div class="toggle_btn">
            <span></span>
            <span></span>
            <span></span>
          </div>

          <div id="mask"></div>

        </div>

        <main>
          <div class="logo">
            <%= link_to root_path , data: {"turbolinks" => false} do %>
            <%= image_tag asset_path ("logo.jpeg") %>
            <% end %>
          </div>
        </main>
        <%= yield %>
      </body>
    </html>
