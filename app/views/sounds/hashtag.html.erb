                <% count[1].each do |hashtag| %>
                <a><%= link_to  "##{hashtag.hashtag_word}","/sound/hashtag/#{hashtag.hashtag_word}",data: {"turbolinks" => false} %>
                </a>
                <% end %>
        <% end %>
    </div>
</div>
</div>
<% end %>