<main class="sound-main">
<h1>Sounds</h1>
<a><%= link_to '投稿', new_sound_path, class: 'btn btn-info newpost_buttom', data: {"turbolinks" => false} %></a>
	<div class="sound-back">
		<div class="sound-write">
			<table class="table table-borderless sound-table">
				<thead>
					<tr>
						<th scope="col">User :</th>
						<th scope="col">Title : </th>
						<th scope="col">BPM : </th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% @sounds.each do |sound|%>
					<tr>
						<td><%= link_to sound.user.name, user_path(sound.user) %></td>
						<td><%= link_to sound.title, sound_path(sound),data: {"turbolinks" => false}  %></td>
						<td><%= sound.bpm %></td>
						<td><%= audio_tag sound.file %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>