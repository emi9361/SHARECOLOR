<main class="stage-main">
<h1>Stage#index</h1>
		<%= link_to '投稿する', new_stage_path, class: 'btn btn-info stage-newpost', style: "text-alian:center;" %>
		<div class="stage-list">
		<div class="stage-back">
			<table class="table table-borderless sound-table">
				<thead>
					<tr>
						<th scope="col">User</th>
						<th scope="col">Title</th>
						<th scope="col">Mood</th>
					</tr>
				</thead>
				<tbody>
					<% @stages.each do |stage|%>
					<tr>
						<td><%= stage.user.name %></td>
						<td><%= link_to stage.title, stage_path(stage) %></td>
						<td><%= stage.mood %></td>
						<td><%= video_tag stage.file,  class:"stage-sample", :controls => true %></td>
					</tr>
					<% end %>
					</tbody>
			</table>
		</div>
	</div>
</main>
	</div>
