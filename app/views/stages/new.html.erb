<main class="stage-main">
<h1>Stage NewPost</h1>
	<a><%= link_to '戻る', stages_path, class: 'btn btn-outline-info back_buttom', data: {"turbolinks" => false} %></a>
	<div class="stage-list">
			<div class="sound-main">
				<div class="sound-write">
				<%= form_for @stage do |f| %>
					<%= f.label :動画 %>
					<i class="fas fa-video"></i>
					<%= f.file_field :file, :accept => 'video/*' %><br />
					<%= f.label :サムネイル %>
					<i class="fas fa-image"></i>
					<%= f.attachment_field :image %><br />
					<%= f.label :タイトル %>
					<%= f.text_field :title %>
					<%= f.label :ジャンル %>
					<%= f.text_field :genre %><br />
					<%= f.label :ハッシュタグ %>
					<%= f.text_field :hashbody, placeholder: "#mood..cute..etc" %>
					<%= f.label :Detail %>
					<%= f.text_area :detail %><br />
					<%= f.submit "アップロード", class: 'btn btn-outline-info'%><br />
				<% end %>
				<p><%= link_to 'StageTop', stages_path, class: 'btn btn-info', style: "text-alian:center;" %></p>
			</div>
		</div>
	</main>


	</div>